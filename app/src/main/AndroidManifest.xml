<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iefp.loginsqlitecrud">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--Login, exectuted at app boot-->
        <activity android:name=".LoginActivity">
            <intent-filter>
                <!--The statement below is crucial to the app start in this activity-->
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--Allow data registration by user after login-->
        <activity android:name=".RegisterActivity" />
        <!--User area accessible after login-->
        <activity android:name=".MainActivity" />
        <activity android:name=".InsertActivity" />
        <activity android:name=".EditActivity" />
    </application>
</manifest>